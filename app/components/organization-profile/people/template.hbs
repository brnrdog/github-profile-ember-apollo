{{did-update this.fetchData.perform @variables}}
{{#if this.isFirstLoading}}
  <FeedbackState>
    Fetching people, please wait...
  </FeedbackState>
{{else}}
  {{#each this.people as |user|}}
    <div local-class='person'>
      <Avatar @size='sm' @user={{user}} />
      <div local-class='info'>
        <div local-class='name'>{{user.name}}</div>
        <div local-class='login'>{{user.login}}</div>
      </div>
    </div>
  {{/each}}
  <LoadMoreButton
    @loading={{this.loading}}
    @loadMore={{perform this.loadMore}}
    @hasNextPage={{this.hasNextPage}}
    @count={{this.people.length}}
    @totalCount={{this.totalCount}}
  />
{{/if}}