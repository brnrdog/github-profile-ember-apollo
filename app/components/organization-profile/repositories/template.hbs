{{did-update this.fetchData.perform @organization}}
{{#if this.isFirstLoading}}
  <LoadingState>
    Fetching repositories, please wait...
  </LoadingState>
{{else}}
  <OrganizationProfile::Repositories::List
    @repos={{this.repositories}}
    @loadMore={{perform this.loadMore}}
    @loading={{this.loading}}
    @hasNextPage={{this.hasNextPage}}
  />
{{/if}}