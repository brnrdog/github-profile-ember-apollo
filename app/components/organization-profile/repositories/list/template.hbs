{{#each @repos as |repo|}}
  <div class='my-4 flex'>
    <div>
      <div class='text-lg'>
        {{repo.nameWithOwner}}
      </div>
      <div class='text-gray-600 mb-2'>
        {{repo.description}}
        {{repo.language.name}}
      </div>
      <div class='text-sm text-gray-500 flex items-center gap-4'>
        {{#if repo.primaryLanguage}}
          <div class='flex items-center'>
            {{! template-lint-disable style-concatenation }}
            <div
              class='w-4 h-4 rounded-full bg-white mr-1'
              style={{concat 'background-color: ' repo.primaryLanguage.color}}
            >
            </div>
            {{repo.primaryLanguage.name}}
          </div>
        {{/if}}
        <div class='flex items-center'>
          <div class='text-gray-700 mr-1'>
            <FaIcon @icon='star' @prefix='far' />
          </div>
          {{repo.stargazers.totalCount}}
        </div>
        <div>
          Popularity:
          {{repo.popularity}}
        </div>
      </div>
    </div>
  </div>
{{/each}}
{{#if @hasNextPage}}
  <Button {{on 'click' @loadMore}} disabled={{@loading}}>
    {{if @loading 'Loading...' 'Load more'}}
  </Button>
{{/if}}