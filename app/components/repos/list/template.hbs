{{#each @repos as |repo|}}
  <div class='my-4 flex'>
    <div>
      <div class='text-lg'>
        {{repo.name}}
      </div>
      <div class='text-gray-600'>
        {{repo.description}}
        {{repo.language.name}}
      </div>
      {{repo.nameWithOwner}}
    </div>
  </div>
{{/each}}
<button type='button' {{on 'click' @loadMore}} disabled={{@loading}}>
  {{if @loading 'Loading...' 'Load more'}}
</button>